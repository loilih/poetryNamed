page {
  height: 100%;
  display: flex;
}
.name-list {
  display: flex;
  flex-direction: column;
  flex: 1;
  box-sizing: border-box;
}
.name-list .scroll {
  flex: 1;
  overflow: hidden;
  box-sizing: border-box;
  margin-bottom: 80rpx;
}
.name-list .scroll .scroll-list {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.name-list .scroll .scroll-list .list-item {
  position: relative;
  padding: 30px;
  margin: 20rpx;
  border-radius: 20rpx;
  color: #fff;
  box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
  font-size: 30rpx;
}
.name-list .scroll .scroll-list .list-item .list-head,
.name-list .scroll .scroll-list .list-item .list-footer {
  display: flex;
  justify-content: space-between;
}
.name-list .scroll .scroll-list .list-item .list-middle {
  margin: 20rpx 0;
}
.name-list .scroll .scroll-list .list-item .list-middle text.highlight {
  font-size: 35rpx;
  color: #FF4500;
}
.name-list .scroll .scroll-list .list-item .list-head text:first-child {
  font-weight: bold;
  font-size: 40rpx;
  color: #eea2a4;
}
.name-list .scroll .scroll-list .list-item .list-footer text:nth-child(2) {
  font-size: 50rpx;
}
.name-list .footer {
  display: flex;
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0;
  align-items: center;
}
.name-list .footer button {
  flex: 1;
  margin-left: 10rpx;
  height: 80%;
  background-color: #fff;
  color: #000;
}

