.name-detail-head {
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  position: relative;
  justify-content: center;
  box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
  display: flex;
  align-items: center;
}
.name-detail-head .name-detail-head-left {
  display: flex;
  flex-direction: column;
  text-align: center;
}
.name-detail-head .name-detail-head-left text:nth-child(1) {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}
.name-detail-head .name-detail-head-left text:nth-child(2) {
  color: #ddd;
}
.name-detail-head .name-detail-head-left text:nth-child(3) {
  color: #eee;
}
.name-detail-head .name-detail-head-right text {
  margin-right: 50rpx;
  color: #ddd;
  font-size: 30rpx;
}
.name-detail-head .name-detail-head-right .likes {
  position: absolute;
  right: 10rpx;
  top: 75%;
}

